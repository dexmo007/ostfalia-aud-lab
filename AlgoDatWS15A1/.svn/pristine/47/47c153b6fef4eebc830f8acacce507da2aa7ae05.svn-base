package de.ostfalia.aud.ws15;

/**
 * @author Henrik and Maxi
 */
public class Contact {
    private String name;
    private String firstName;
    private String email;
    private String streetAddress;
    private String zipCode;
    private String city;
    private String phoneNumber;

    /**
     * standard constructor for a contact
     *
     * @param name name of the contact
     * @param firstName first name of the contact
     * @param email email address of the contact
     * @param streetAddress street address of the contact
     * @param zipCode zip code of the contact
     * @param city city of the contact
     * @param phoneNumber phone number of the contact
     */
    public Contact(String name, String firstName, String email,
                   String streetAddress, String zipCode,
                   String city, String phoneNumber) {
        this.name = name;
        this.firstName = firstName;
        this.email = email;
        this.streetAddress = streetAddress;
        this.zipCode = zipCode;
        this.city = city;
        this.phoneNumber = phoneNumber;
    }

    /**
     * contructor for a contact using an array containing contact info
     *
     * @param array array containg name, firstname, email,
     *          streetaddress, zipcode, city, phonenumber, in this order
     */
    public Contact(String[] array) {
        this.name = array[0];
        this.firstName = array[1];
        this.email = array[2];
        this.streetAddress = array[3];
        this.zipCode = array[4];
        this.city = array[5];
        this.phoneNumber = array[6];
    }

    /**
     * getter for name attribute
     *
     * @return name string
     */
    public String getName() {
        return name;
    }

    /**
     * setter for name attribute
     *
     * @param name name string
     */
    public void setName(String name) {
        this.name = name;
    }

    /**
     * getter for first name attribute
     *
      * @return first name string
     */
    public String getFirstName() {
        return firstName;
    }

    /**
     * setter for first name attribute
     *
     * @param firstName first name string
     */
    public void setFirstName(String firstName) {
        this.firstName = firstName;
    }

    /**
     * getter for email attribute
     *
     * @return email string
     */
    public String getEmail() {
        return email;
    }

    /**
     * setter for email attribute
     *
     * @param email email string
     */
    public void setEmail(String email) {
        this.email = email;
    }

    /**
     * getter for street address attribute
     *
     * @return street address string
     */
    public String getStreetAddress() {
        return streetAddress;
    }

    /**
     * setter for street address attribute
     *
     * @param streetAddress street address string
     */
    public void setStreetAddress(String streetAddress) {
        this.streetAddress = streetAddress;
    }

    /**
     * getter for zip code attribute
     *
     * @return zip code attribute
     */
    public String getZipCode() {
        return zipCode;
    }

    /**
     * setter for zip code attribute
     *
     * @param zipCode zip code string
     */
    public void setZipCode(String zipCode) {
        this.zipCode = zipCode;
    }

    /**
     * getter for city attribute
     *
     * @return city string
     */
    public String getCity() {
        return city;
    }

    /**
     * setter for city attribute
     *
     * @param city city string
     */
    public void setCity(String city) {
        this.city = city;
    }

    /**
     * getter for phone number attribute
     *
     * @return phone number string
     */
    public String getPhoneNumber() {
        return phoneNumber;
    }

    /**
     * setter for phone number attribute
     *
     * @param phoneNumber phone number string
     */
    public void setPhoneNumber(String phoneNumber) {
        this.phoneNumber = phoneNumber;
    }
}
